/* pages/history/history.wxss */
.list {
  margin: 20px 10px 0;
}

.list-item {
  padding: 15px;
  overflow: hidden;
  margin-bottom: 20px;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
  background-image: linear-gradient(-90deg,rgba(0,0,0,.01),transparent);
}

.list-right {
  /* width: 20px; */
  height: 35px;
  float:right;
  line-height: 35px;
}

.list-left {
  /* width: 20px; */
  height: 20px;
  float: left;
  margin-right: 5px;
  width: 33.333333%;
}

.stage {
  font-size: 20rpx;
  padding: 1px 2px;
  margin-left: 5px;
  vertical-align: middle;
  background-color: #b3d4db;
  color: #fff;
  border-radius: 3px;
}

.day {
  font-size: 23rpx;
  color:#9499A8;
  margin-top: 5px;
}

.className {
  font-size: 32rpx;
}

.green {
  color:green;
}

.red {
  color:red;

}

.list-center {
  float: left;
  text-align: center;
  width: 33.333333%;
  line-height: 35px;
  font-size: 32rpx;
}

