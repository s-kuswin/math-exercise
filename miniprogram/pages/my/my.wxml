<view class="contenr">
  <view class="myInformation">
    <view class="myImage">
      <open-data type="userAvatarUrl"></open-data>
      <!-- <image src="../../images/person.png"></image> -->
    </view>
    <view class="col-box">
      <view class="col col-3">
        <view class="number">{{ dayNum }}</view>
        <view class="text">累计训练天数</view>
      </view>
      <view class="col col-3">
        <view class="number">{{ bestScore }}</view>
        <view class="text">历史最高成绩</view>
      </view>
      <view class="col-3">
        <view class="number">{{ practiceNum }}</view>
        <view class="text">练习试卷数量</view>
      </view>
    </view>
    
  </view>

  <view class="list">
    <view class="list-item" bindtap="historyClick">
      <image src="../../images/lishi.png" class="list-left"></image>
      <text class="list-text">历史记录</text>
      <image src="../../images/right.png" class="list-right"></image>
    </view>
  </view>
</view>
